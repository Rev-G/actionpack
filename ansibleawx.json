{
    "variables": {
        "iso": "/Users/gary/iso/CentOS-7-x86_64-DVD-1908.iso",
        "checksum": "9bba3da2876cb9fcf6c28fb636bcbd01832fe6d84cd7445fa58e44e569b3b4fe",
        "dockeruser": "packer"
    },
    "builders": [
    {
        "name": "AnsibleAWX",
        "type": "vmware-iso",
        "version": "16",
        "iso_url": "{{ user `iso` }}",
        "iso_checksum": "{{ user `checksum` }}",
        "iso_checksum_type": "sha256",
        "ssh_username": "root",
        "ssh_password": "rootpassword",
        "ssh_timeout": "60000s",
        "shutdown_command": "shutdown -P now",
        "guest_os_type": "centos-64",
        "cores": 2,
        "memory": 4000,
        "disk_type_id": "0",
        "http_directory": "http",
        "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
        ],
        "vmx_data" :{
            "vhv.enable": "TRUE"
        }
    }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./http/packer.txt",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "inline":[
                "yum install -y epel-release",
                "yum -y update",
                "yum -y install git gcc gcc-c++ nodejs gettext device-mapper-persistent-data lvm2 bzip2 python-pip python-devel ansible"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "yum-config-manager --add-repo=https://download.docker.com/linux/centos/docker-ce.repo",
                "yum install -y docker-ce",
                "systemctl enable --now docker.service"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "usermod -aG docker {{ user `dockeruser` }}"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "pip install --upgrade pip",
                "pip install docker-compose"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "git clone https://github.com/ansible/awx.git /tmp/awx"
            ]
        },
        {
            "type": "file",
            "source": "./http/inventory",
            "destination": "/tmp/awx/installer/"
        },
        {
            "type": "shell",
            "inline": [
                "chown -R packer:packer /tmp/awx"
            ]
        }
        
    ]
}
